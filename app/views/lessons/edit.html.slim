- provide(:title, t('ui.edit_lesson'))
h1 = t('ui.edit_lesson')
.row
  .span6.offset3
    = form_for([@course, @lesson]) do |f|
      
      = render 'fields', f: f

      = f.submit t("ui.edit_lesson"), class: "btn btn-large btn-primary"
      <br/>                               
      <br/>                               
      = link_to t("ui.back"), course_lessons_path
